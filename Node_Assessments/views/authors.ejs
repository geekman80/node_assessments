<%- include('partials/header') %>

<div class="jumbotron centered">
  <div class="container"> <br>
    <h1 class="display-3">Authors</h1>
    <p class="lead">List of all Authors</p>
    <hr>
  </div>
</div>
<div class="container">
  <div class="row align-items-center">
    <% for(var each_author = 0; each_author < body.length; each_author++) { %>  
    <div class="col">
      <div class="card" style="width: 18rem;padding-top: 10px;margin-top:10px;">
        <i class="fas fa-user fa-3x" style=" margin-top: 10px; margin-left: 20px;"></i>
        <div class="card-body">
          <h5 class="card-title"><%= body[each_author]['firstname'] + " " + body[each_author]['lastname'] %></h5>
          <p class="card-text"><%= body[each_author]['email'] %></p>
        </div>
      </div>
    </div>  
    <% }%>
    
  </div>
  <div class = "row">
    <br> 
  </div>
</div> 
    <%- include('partials/footer') %> 
  
